{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "site": "meesa-wa",
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/__/auth/**",
        "destination": "/__/auth/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "pubsub": {
      "port": 8085
    }
  }
}
